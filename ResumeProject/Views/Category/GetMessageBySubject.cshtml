@using ResumeProject.Models
@model List<tbl_contact>
@{
    ViewBag.Title = "GetMessageBySubject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Konuya Göre Gelen Mesajlar</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad-Soyad</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.NameSurname</td>
            <td>@item.tbl_category.CategoryName</td>
            <td>@item.Date</td>
            <td><a href="/Contact/DeleteMessage/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-dark">Mesajı Aç</a></td>
        </tr>
    }
</table>


